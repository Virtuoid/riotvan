-# contents in #head and #body will be appended to head and body tags in index.html, same thing for #title
%div
  #head
    #title RiotVan
    %link{ type: "text/sass", href: "/sass/reset.sass" }
    %link{ type: "text/sass", href: "/sass/app.sass" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0, user-scalable=no" }
    %style
      @media (min-width: 800px) {
        body #container {
          font-size: 1.1em
        }
      }
      @media (max-width: 500px) {
        body #container {
          font-size: 0.9em
        } .right {
          display: none
        } #container .page {
          width: 92%;
        }
      }
  #body
    #container
      %header
        .outer
          %h1
            %a{ href: "/" }
              / RiotVan
              %img{ src: "/images/rv_logo.png" }
            .clear
          .srvstatus
          #fiveapi_message
          #fiveapi
        .nav_box
          .nav_cont
            %nav
              / %a{ href: "http://video.riotvan.net" } Video
              %a{ href: "/videos" }     Video
              %span /
              / %a{ href: "/shop" }     Shop
              %a{ href: "/events" }     Eventi
              %span /
              / %a{ href: "/argomenti" }  Argomenti
              %a{ href: "/issues" }     Magazine
              %span /
              %a{ href: "/workshop" }   Workshop
              %span /
              %a{ href: "/chi_siamo" }  Chi siamo
              %span /
              %a{ href: "/collabs" }    Collaborazioni

      .clear
      #debug

      #content
        #webgl
        != yield
      .clear
      %footer
        %img.furgone{ src: "/images/van_mini_glow.png" }
        .stripe
      #fb-root

